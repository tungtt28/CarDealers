@model CarDealers.Entity.News
@{
    ViewBag.Title = "Details News";
}
<style>
    .content-wrap {
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
    }

    dl.row {
        display: flex;
        flex-wrap: wrap;
        margin: 0;
    }

    dt.col-sm-2 {
        flex-basis: 20%;
        margin-right: 10px;
    }

    dd.col-sm-10 {
        flex-basis: 80%;
    }
</style>


<div class="content-wrap">
    @Html.AntiForgeryToken()
    <h2>Content Details</h2>
    <hr />
    <div>
        <dl class="row">

            <dd class="col-sm-10">Author : @Html.Raw(Model.Author.FullName)</dd>
            <dd class="col-sm-10">News Type: @Html.Raw(Model.NewsType.NewsTypeName)</dd>

            <dd class="col-sm-10">Title: @Html.Raw(Model.Title)</dd>
            <dd class="col-sm-10">PublishDate: @Html.Raw(Model.PublishDate)</dd>
        </dl>
    </div>
    <h1>Content :</h1>
    <dl class="row">
        <dd class="col-sm-10">@Html.Raw(Model.Content)</dd>
    </dl>

    

</div>

<a style="float:right; margin-right:20px" class="btn btn-dark" href="~/admin/News/ListNews">Back to list</a>
