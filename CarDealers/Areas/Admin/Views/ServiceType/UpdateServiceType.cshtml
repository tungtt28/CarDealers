@model CarDealers.Entity.ServiceType
@{
    ViewBag.Title = "Update Service Types";
}

<div class="content-wrap">
    <div class="col-lg-12">
        <div class="card">
            @using (Html.BeginForm("UpdateServiceType", "ServiceType", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <!-- Hidden field for BrandId -->
                @Html.HiddenFor(model => model.ServiceTypeId)

                <div class="form-group">
                    @Html.LabelFor(model => model.ServiceTypeName)
                    @Html.TextBoxFor(model => model.ServiceTypeName, new { @class = "form-control input-rounded" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(model => model.ServiceTypeName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control input-rounded form-edit" })
                    <div style="color: red">
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <!-- Add other form fields as needed -->

                <button type="submit" class="btn btn-dark">Update Service Type</button>
            }
        </div>
    </div>
</div>