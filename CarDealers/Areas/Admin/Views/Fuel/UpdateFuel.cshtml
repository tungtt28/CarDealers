@model CarDealers.Entity.FuelType
@{
    ViewBag.Title = "Update Fuel Type";
}
<div class="content-wrap">
    <div class="col-lg-12">
        <div class="card">
            @using (Html.BeginForm("UpdateFuel", "Fuel", new { id = Model.FuelTypeId }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.FuelTypeName)
                    @Html.TextBoxFor(model => model.FuelTypeName, new { @class = "form-control input-rounded" })
                    <div style="color : red">
                    @Html.ValidationMessageFor(x => x.FuelTypeName)
                    </div>
                </div>
                @Html.HiddenFor(model => model.FuelTypeId)
                <!-- Add form fields for other properties you want to edit -->

                <button type="submit" class="btn btn-dark">Save Changes</button>
            }
        </div>
    </div>
</div>

