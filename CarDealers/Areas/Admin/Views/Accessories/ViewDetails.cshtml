@model CarDealers.Entity.AutoAccessory
@{
    ViewData["Title"] = "Details Accessories";
}
<style>
    .content-wrap {
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
    }

    dl.row {
        display: flex;
        flex-wrap: wrap;
        margin: 0;
    }

    dt.col-sm-2 {
        flex-basis: 20%;
        margin-right: 10px;
    }

    dd.col-sm-10 {
        flex-basis: 80%;
    }
</style>


<div class="content-wrap">
    @Html.AntiForgeryToken()
    <h1>Description</h1>
    <dl class="row">
        <dd class="col-sm-10">@Html.Raw(Model.Description)</dd>
    </dl>

    <a style="float:right" href="~/admin/Accessories/ListAccessories" class="btn btn-dark">Back To List</a>

</div>
