@model CarDealers.Entity.Coupon
@{
    ViewBag.Title = "Create Coupons";
}

<div class="content-wrap">
    <div class="col-lg-12">
        <div class="card">
            @using (Html.BeginForm("CreateCoupons", "Coupons", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-rounded" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                    <div class="form-group">
                    @Html.LabelFor(model => model.Code)
                    @Html.TextBoxFor(model => model.Code, new { @class = "form-control input-rounded" })
                        <div style="color : red">
                        @Html.ValidationMessageFor(model => model.Code)
                        </div>
                    </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    <br>
                    @Html.TextAreaFor(model => model.Description, new { @id = "editor" })
                    <script>
                        CKEDITOR.replace("editor");
                    </script>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateStart)
                    @Html.TextBoxFor(model => model.DateStart, new { @class = "form-control input-rounded", type = "date" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(model => model.DateStart)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateEnd)
                    @Html.TextBoxFor(model => model.DateEnd, new { @class = "form-control input-rounded", type = "date" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(model => model.DateEnd)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UsesTotal)
                    @Html.TextBoxFor(model => model.UsesTotal, new { @class = "form-control input-rounded", type = "number", step = "1" ,min = "0"})
                    <div style="color: red">
                        @Html.ValidationMessageFor(model => model.UsesTotal)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateAdded)
                    @Html.TextBoxFor(model => model.DateAdded, new { @class = "form-control input-rounded", type = "date" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(model => model.DateAdded)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PercentDiscount)
                    @Html.TextBoxFor(model => model.PercentDiscount, new { @class = "form-control input-rounded", type = "number", step = "1" ,min = "0" })
                    <div style="color: red">
                        @Html.ValidationMessageFor(model => model.PercentDiscount)
                    </div>
                </div>

               



                <!-- Add other form fields as needed -->

                <button type="submit" class="btn btn-dark">Create Coupons</button>
            }
        </div>
        <a style="float:right;" class="btn btn-dark" href="~/admin/Coupons/ListCoupons">Back to list</a>
    </div>
</div>