@model CarDealers.Entity.Coupon
@{
    ViewBag.Title = "Update Coupons";
}
<div class="content-wrap">
    <div class="col-lg-12">
        <div class="card">
            @using (Html.BeginForm("UpdateCoupons", "Coupons", new { id = Model.CouponId }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-rounded" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Code)
                    @Html.TextBoxFor(model => model.Code, new { @class = "form-control input-rounded" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(model => model.Code)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    <br>
                    @Html.TextAreaFor(model => model.Description, new { @id = "editor" })
                    <script>
                        CKEDITOR.replace("editor");
                    </script>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateStart)
                    @Html.TextBoxFor(model => model.DateStart, new { @class = "form-control input-rounded" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(x => x.DateStart)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateEnd)
                    @Html.TextBoxFor(model => model.DateEnd, new { @class = "form-control input-rounded" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(x => x.DateEnd)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UsesTotal)
                    @Html.TextBoxFor(model => model.UsesTotal, new { @class = "form-control input-rounded", type = "number", step = "1",min = "0" })
                    <div style="color: red">
                        @Html.ValidationMessageFor(model => model.UsesTotal)
                    </div>
                </div>

               <div class="form-group">
                    @Html.LabelFor(model => model.DateAdded)
                    @Html.TextBoxFor(model => model.DateAdded, new { @class = "form-control input-rounded" })
                    <div style="color : red">
                        @Html.ValidationMessageFor(x => x.DateAdded)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PercentDiscount)
                    @Html.TextBoxFor(model => model.PercentDiscount, new { @class = "form-control input-rounded", type = "number", step = "1",min = "0" })
                    <div style="color: red">
                        @Html.ValidationMessageFor(model => model.PercentDiscount)
                    </div>
                </div>

               



                @Html.HiddenFor(model => model.CouponId)
                <!-- Add form fields for other properties you want to edit -->

                <button type="submit" class="btn btn-dark">Save Changes</button>
            }
        </div>
        <a style="float:right" class="btn btn-dark" href="~/admin/Coupons/ListCoupons">Back to list</a>
    </div>
</div>
