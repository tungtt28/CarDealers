@model List<CarDealers.Entity.News>
@{
    ViewData["Title"] = "News";
}
<section class="about_section layout_padding">
	<div class="container">
		<div class="heading_container">
			<div class="container">
				<div class="heading_container">
					<h2>
						News
					</h2>
				<hr>
				</div>
				<br>

				<form method="post" action="@Url.Action("SearchNewsPage", "NewsPage")">
					<div class="filter-form">
						<div class="row">
							<div class="col-sm-12">
								<div class="search-form">
									<div class="form-group">
										<label for="Keyword">Search:</label>
										<input type="text" class="form-control" id="Keyword" name="Keyword" value="@ViewBag.Keyword">
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<button style="float:right" type="submit" class="btn btn-dark">Search</button>
							</div>
						</div>
					</div>
				</form>
				<hr>

				<div class="container">
					<div class="row">
						@foreach (var news in Model)
						{
							<div class="col-md-4" style="margin-top : 30px">

								<div class="card">

									@*<a style="height: 200px; width: auto" href="~/NewsPage/ViewDetails?id=@news.NewsId">
										<img src="@Url.Content("~/"+news.Image)" class="card-img-top" alt="Tin Tức 1">
									</a>*@


									<img src="@Url.Content("~/"+news.Image)" style="height:400px; width:auto"
									 class="card-img-top" alt="Tin Tức 1">
									<a href="~/NewsPage/ViewDetails?id=@news.NewsId" class="card-title" style="background-color: white;font-size:20px;">@news.Title</a>
									<p style="color: black;margin-top:0;margin-bottom:20px; font-size:13px;margin-left:170px" class="card-text">@(((DateTime)news.PublishDate).ToString("dd/MM/yyyy"))  | @news.Author.FullName</p>
									
									@*<div/NewsPage/News
								<p style="color: black" class="card-text">@news.PublishDate</p>
								<p style="color: black" class="card-text">@news.Author.FullName</p>
								<p style="color: black" class="card-text">@news.NewsType.NewsTypeName</p>
								<a href="#" class="btn btn-dark">Xem thêm</a>
								</div>*@
								</div>
							</div>
						}
					</div>

				</div>
			</div>
		</div>
		<div class="d-flex justify-content-center" style="margin-top:50px; background-color:black;font-size:13px">
			<nav aria-label="Page navigation text-center">
				<ul class="pagination">
					@if (ViewBag.PageNumber > 1)
					{
						<li class="page-item">
							<a href="News?page=1" class="page-link">&lt&lt</a>
						</li>
					}

					@for (int i = 1; i <= Math.Ceiling((decimal)ViewBag.TotalRecords / ViewBag.PageSize); i++)
					{
						<li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
							<a href="News?page=@i" class="page-link">@i</a>
						</li>
					}

					@if (ViewBag.PageNumber < Math.Ceiling((decimal)ViewBag.TotalRecords / ViewBag.PageSize))
					{
						<li class="page-item">
							@*<a href="@Url.Action("Index", "Post",new { page = Math.Ceiling((decimal)ViewBag.TotalRecords / ViewBag.PageSize) })" class="page-link">>></a>*@
							<a href="News?page=@Math.Ceiling((decimal)ViewBag.TotalRecords / ViewBag.PageSize)" class="page-link">>></a>
						</li>
					}
				</ul>
			</nav>
		</div>
	</div>
</section>



