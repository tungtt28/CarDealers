@{
    Layout = "_LayoutAccount";
}
@{
    ViewData["Title"] = "Forgot Password";
}

<body class="img js-fullheight" style="background-image: url(/imagesLogin/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Forgot Password?</h3>

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <form asp-action="SendConfirmationCode" asp-controller="ForgotPassword" method="post" class="signin-form">
                            <div class="form-group">
                                <input type="email" name="email" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Send Confirmation Code</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>