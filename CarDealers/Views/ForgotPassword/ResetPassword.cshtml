@{
    Layout = "_LayoutAccount";
}
@{
    ViewData["Title"] = "Reset Password";
}

<body class="img js-fullheight" style="background-image: url(/imagesLogin/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Reset Password</h3>

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <form asp-action="ResetPassword" asp-controller="ForgotPassword" method="post" class="signin-form">
                            @if (TempData["ErrorMessageNewPassword"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["ErrorMessageNewPassword"]
                                </div>
                            }
                            <div class="form-group">
                                <label for="newPassword">New Password:</label>
                                <input type="password" id="newPassword" name="newPassword" class="form-control" required>
                            </div>

                            @if (TempData["ErrorMessageConfirmPassword"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["ErrorMessageConfirmPassword"]
                                </div>
                            }
                            <div class="form-group">
                                <label for="confirmPassword">Confirm Password:</label>
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
                            </div>
                            <button type="submit" class="form-control btn btn-primary submit px-3">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
